{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.vue",
    "example/**/*.ts",
    "example/**/*.vue",
    "types/**/*.ts"
  ]
}
